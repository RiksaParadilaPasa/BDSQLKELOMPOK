<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFCD8"
    android:gravity="center">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/student1"
        android:layout_marginBottom="40dp"/>
    <Button
        android:id="@+id/btnLihatData"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:text="Lihat data"
        android:drawableLeft="@drawable/ic_archive_black_24dp"
        android:layout_marginBottom="45dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#F44336"/>
    <Button
        android:id="@+id/btnTambah"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:text="Tambah data"
        android:drawableLeft="@drawable/ic_add_box_black_24dp"
        android:layout_marginBottom="45dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#2196F3"/>
    <Button
        android:id="@+id/btnInformasi"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:text="Informasi"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#FFC107"/>


</LinearLayout>